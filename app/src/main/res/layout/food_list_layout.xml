<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:foreground="?selectableItemBackground"
    android:id="@+id/fooditemCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/foodProductImage"
            android:layout_width="150dp"
            android:layout_height="120dp"

            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/foodProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="4dp"
                android:textSize="10sp"
                android:id="@+id/foodProductLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                app:drawableStartCompat="@drawable/ic_location_pin" />

            <TextView
                android:id="@+id/foodAdditionalAddress"
                android:layout_marginStart="3dp"
                android:textSize="10sp"
                android:text="additional address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



        <TextView
            android:paddingStart="3dp"
            android:id="@+id/foodProductCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="13sp"
            android:textStyle="bold"
            />
        <TextView
            android:textSize="10sp"
            android:id="@+id/foodProductTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="end"
            android:gravity="bottom"
            />




    </LinearLayout>


</androidx.cardview.widget.CardView>