<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:foreground="?selectableItemBackground"
    android:id="@+id/specificItemCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:background="@color/light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:src="@drawable/cow_img"
            android:scaleType="centerCrop"
            android:id="@+id/specificProductImage"
            android:layout_width="180dp"
            android:layout_height="150dp"

            />

        <TextView
            android:id="@+id/specificProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />


        <TextView
            android:textSize="10sp"
            android:id="@+id/specificProductLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:drawableStartCompat="@drawable/ic_location_pin" />


        <TextView
            android:id="@+id/specificProductCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600 ksh"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:textSize="10sp"
            android:id="@+id/specificProductTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="end"
            android:gravity="bottom"

            />



    </LinearLayout>


</androidx.cardview.widget.CardView>