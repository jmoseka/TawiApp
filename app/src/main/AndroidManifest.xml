        <activity android:name="com.mila.agrimo.ProfileActivity"/>
        <activity android:name="com.mila.agrimo.EditProfileActivity"/>
        <activity android:name="com.mila.agrimo.ProductInfoActivity"/>
        <activity android:name="com.mila.agrimo.ChatActivity"/>
        <activity android:name="com.mila.agrimo.MessageActivity"/>
        <activity android:name="com.mila.agrimo.OtherProfile"/>
        <activity android:name="com.mila.agrimo.SuccessActivity"/>
        <activity android:name="com.mila.agrimo.FoodMarketplace"
            android:windowSoftInputMode="stateHidden"
            />

        <activity android:name="com.mila.agrimo.FarmMarketplace"
            android:windowSoftInputMode="stateHidden"/>


    </application>

</manifest>